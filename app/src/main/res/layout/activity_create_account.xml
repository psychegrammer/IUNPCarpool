<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".CreateAccountActivity">

    <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:background="@color/colorAccent"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardCornerRadius="13dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:background="@color/colorAccent"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="match_parent">

            <ImageView
                    android:src="@drawable/chat_icon"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="80dp" android:layout_height="80dp"/>

            <TextView
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:text="@string/create_act"
                    android:textSize="18sp"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="50dp"
                    android:paddingEnd="30dp">

                <EditText
                        android:id="@+id/accountDisplayNameEt"
                        android:background="@drawable/selector_bg_edit_2"
                        android:inputType="textPersonName"
                        android:hint="Display Name"
                        android:paddingBottom="10dp"
                        android:textColor="#f0f7f4"
                        android:textSize="14sp"
                        android:textCursorDrawable="@drawable/bg_input_cursor_2"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/accountEmailEt"
                        android:background="@drawable/selector_bg_edit_2"
                        android:inputType="textEmailAddress"
                        android:hint="Enter Email"
                        android:paddingBottom="10dp"
                        android:textColor="#f0f7f4"
                        android:textSize="14sp"
                        android:textCursorDrawable="@drawable/bg_input_cursor_2"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>

                <EditText
                        android:id="@+id/accountPasswordEt"
                        android:background="@drawable/selector_bg_edit_2"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:paddingBottom="10dp"
                        android:textColor="#f0f7f4"
                        android:textSize="14sp"
                        android:textCursorDrawable="@drawable/bg_input_cursor_2"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>

                <RelativeLayout
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent" android:layout_height="45dp">

                        <Button
                                android:id="@+id/accountCreateActBtn"
                                android:background="@drawable/bt_shape"
                                android:stateListAnimator="@drawable/state_list_animator_z"
                                android:text="@string/create_act"
                                android:textColor="#d3d3d3"
                                android:layout_width="150dp" android:layout_height="45dp"/>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>